source 'https://rubygems.org'  do

  # Mongodb support
  gem 'mongoid', '~> 6.1.0'
  gem 'bson_ext'
  gem "ruby-filemagic"
  gem "mongoid-grid_fs"
  gem "rest-client"
  gem "json"
  gem "colorize"
  gem 'aws-sdk', '~> 2'
  # Encryption
  gem 'aescrypt'
  gem 'bunny'

  group :development, :test do
  	gem 'pry'
  	gem 'pry-coolline'
	  gem 'rspec'
	  gem 'mongoid-rspec'
	  gem 'database_cleaner'
  end
end
